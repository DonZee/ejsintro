<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
      .container{
        display: flex;
      }
      .card{
        margin:10px;
        text-align: center;
        flex:1;
        border: 1px solid black;
      }
    </style>
  </head>
  <body>

    <div class="container">
      <% for(var i = 0; i<users.length; i++){ %>
        <% if(users[i].age >= 21){ %>
          <div class="card">
            <b>Valid user can be let in</b>
            <h3><%= users[i].name %></h3>
            <b><%= users[i].email %></b>
            <p><%= users[i].age %></p>
          </div>
        <% }else{ %>
          <div class="card">
            <h3><%= users[i].name %> IS NOT ALLOWED</h3>
          </div>
        <% } %>
      <% } %>
    </div>

  </body>
</html>
