<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <style media="screen">
      .container{
        display: flex;
      }
      .card{
        margin:10px;
        text-align: center;
        flex:1;
        border: 1px solid black;
      }
    </style>
  </head>
  <body>

    <div class="container">
      <% for(var i = 0; i<users.length; i++){ %>
        <div class="card">
          <h3><%= users[i].name %></h3>
          <b><%= users[i].email %></b>
          <p><%= users[i].age %></p>
        </div>
      <% } %>
    </div>

  </body>
</html>
